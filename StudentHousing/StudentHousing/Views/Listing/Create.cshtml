@model StudentHousing.Models.ListingModel
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form method="post" enctype="multipart/form-data">
    <div>
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="Description"></label>
        <input asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>
    <div>
        <label asp-for="Address1"></label>
        <input asp-for="Address1" />
        <span asp-validation-for="Address1"></span>
    </div>
    <div>
        <label asp-for="Images"></label>
        <input type="file" id="file" asp-for="Images" multiple />
        <span asp-validation-for="Images"></span>
    </div>
    <div class="row">
        <div class="col-md-4 mb-3">
            <label asp-for="PhoneNumber">Contact Phone#</label>
            <input class="form-control" asp-for="PhoneNumber" value="@User.Claims.FirstOrDefault(c => c.Type == "PhoneNumber").Value"/>
            <span asp-validation-for="PhoneNumber"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 mb-3">
            <label asp-for="ContactName">Contact Name</label>
            <input class="form-control" asp-for="ContactName" value="@User.Claims.FirstOrDefault(c => c.Type == "FullName").Value"/>
            <span asp-validation-for="ContactName"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 mb-3">
            <label asp-for="Email">Contact Phone#</label>
            <input class="form-control" asp-for="Email" value="@User.Claims.FirstOrDefault(c => c.Type == "Email").Value"/>
            <span asp-validation-for="Email"></span>
        </div>
    </div>



    <input type="submit" name="save" value="Save" />
</form>


